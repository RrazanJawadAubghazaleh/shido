<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteButton">
        <item name="android:background">@drawable/background_button_facebook_google</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#0A2084</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueButton" parent="WhiteButton">
        <item name="android:background">@drawable/background_button_shido</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="myEditText">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/mydesign</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
